{
  "name": "whatsapp-sender",
  "private": true,
  "version": "0.0.0",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "build": "vite build && electron-builder"
  },
  "dependencies": {
    "lucide-react": "^0.545.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "selenium-webdriver": "^4.36.0",
    "electron-is-dev": "^2.0.0",
    "chromedriver": "^141.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "sass": "^1.93.2",
    "vite": "^7.1.7"
  },
  "build": {
    "appId": "com.seuapp.whatsapp-sender",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "src/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "asarUnpack": [
      "node_modules/selenium-webdriver/bin/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/chromedriver/lib/chromedriver",
        "to": "drivers/chromedriver",
        "filter": [
          "**/chromedriver.exe"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}