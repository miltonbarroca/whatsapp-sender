{
  "name": "whatsapp-sender",
  "description": "Desktop application to send automated WhatsApp messages using Selenium WebDriver",
  "author": {
    "name": "Milton Barroca",
    "email": "miltonbarroca.dev@gmail.com"
  },
  "private": true,
  "version": "0.1.1",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "prebuild": "node ./scripts/update-chromedriver.js",
    "build": "vite build && electron-builder",
    "release": "npm run prebuild && vite build && electron-builder --publish always"
  },
  "dependencies": {
    "chromedriver": "^143.0.4",
    "electron-is-dev": "^2.0.0",
    "lucide-react": "^0.545.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "selenium-webdriver": "^4.36.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "baseline-browser-mapping": "^2.9.11",
    "concurrently": "^9.2.1",
    "electron": "^25.9.8",
    "electron-builder": "^23.0.6",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "sass": "^1.93.2",
    "vite": "^7.1.7"
  },
  "build": {
    "appId": "com.miltonbarroca.whatsapp-sender",
    "productName": "WhatsApp Sender",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "src/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "asarUnpack": [
      "node_modules/selenium-webdriver/bin/**"
    ],
    "extraResources": [
      {
        "from": "drivers/chromedriver",
        "to": "drivers/chromedriver",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb"
      ]
    },
    "deb": {
      "artifactName": "${name}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "miltonbarroca",
        "repo": "whatsapp-sender",
        "releaseType": "release"
      }
    ]
  }
}
